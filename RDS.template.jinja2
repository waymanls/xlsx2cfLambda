
########################################################################################
#                                     DATABASES                                        #
########################################################################################
  {{ InstanceName }}:
    Type: AWS::RDS::DBInstance
    Properties:
      AutoMinorVersionUpgrade: false
      Engine: {{ OS }}
      EngineVersion: {{ Version }}
      AllocatedStorage: {{ RootVolSize }}
      StorageType: {{ StorageType }}
      DBInstanceClass: {{ InstanceType }}
      AvailabilityZone: {{ AvailabilityZone }}
      BackupRetentionPeriod: {{ Backups }}
      DBInstanceIdentifier: {{ InstanceName }}
      VPCSecurityGroups: {{ SecurityGroup }}
      DBSubnetGroupName: {{ SubnetId }}
      MasterUsername: {{ Username }}
      MasterUserPassword: {{ DBPassword }}
      KmsKeyId: !If [IsEncrypted, !Ref BlockEncryptionKey, !Ref "AWS::NoValue"]
      StorageEncrypted: !If [IsEncrypted, True, False]
      LicenseModel: !If [IsSQLServer, "license-included", !Ref "AWS::NoValue"]
      Tags:
      - Key: Name
        Value: {{ InstanceName }}
      - Key: Environment
        Value: {{ EnvironmentName }}
      - Key: ArchitectureID
        Value: ""
      - Key: MissionOwner
        Value: {{ MissionOwner }}
      - Key: Office
        Value: {{ Office }}
      - Key: Product
        Value: {{ Product }}
      - Key: WorkloadType
        Value: {{ WorkloadType }}
      - Key: Startup
        Value: {{ Startup }}
      - Key: Shutdown
        Value: {{ Shutdown }}
      - Key: Schedule
        Value: {{ Schedule }}
      - Key: ClapOn 
        Value: {{ ClapOn }}
      - Key: ClapOff 
        Value: {{ ClapOff }}
    DeletionPolicy: Snapshot
Outputs:
  DBConnectionString:
    Description: Database Connection String
    Value: !Join ['', [!GetAtt [{{ InstanceName }}, Endpoint.Address], ':', !GetAtt [{{ InstanceName }}, Endpoint.Port] ]]
